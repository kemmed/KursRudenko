<Window x:Class="Kurs2.Windows.EditPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kurs2.Windows"
        mc:Ignorable="d"
                Title="Сброс пароля" Height="150" Width="370" Style="{StaticResource DefaultWindowStyle}" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="16,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18"><Run Language="ru-ru" Text="Введите новый пароль:"/></TextBlock>
        <PasswordBox x:Name="TbPass" HorizontalAlignment="Left" Margin="16,50,0,0" VerticalAlignment="Top" Width="329" Height="20"/>
        
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="250,82,0,0" VerticalAlignment="Top" Width="95" Click="Button_Save" />
        <Button Content="Отмена" HorizontalAlignment="Left" Margin="150,82,0,0" VerticalAlignment="Top" Width="95" Click="Button_clkClose"/>
    </Grid>
</Window>
